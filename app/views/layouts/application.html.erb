<!doctype html>
<html>
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= content_for?(:title) ? yield(:title) : "Cube 0.1" %></title>
    <meta name="description" content="">
    <meta name="author" content="">

    <%= javascript_include_tag "application" %>
    <%= javascript_include_tag "jquery-1.8.0.min" %>
    <%= javascript_include_tag "jquery-ui-1.8.23.custom.min" %>
    <%= javascript_include_tag "jquery.rating" %>
    <%= javascript_include_tag "jquery.rating.pack" %>
    <%= javascript_include_tag "bootstrap" %>

    <%= stylesheet_link_tag    "application", :media => "all" %>
    <%= stylesheet_link_tag    "bootstrap", :media => "all" %>
    <%= stylesheet_link_tag    "jquery-ui-1.8.23.custom", :media => "all" %>
    <%= stylesheet_link_tag    "jquery.rating", :media => "all" %>

    <%= csrf_meta_tags %>

    <%= yield(:head) %>

  </head>
  <body>
    <header class="navbar navbar-fixed-top">
      <nav class="navbar-inner">
        <div class="container">
          <%= render 'layouts/navigation' %>
        </div>
      </nav>
    </header>
    <div id="main" role="main">
      <div class="container">
           <div class="row">
            <div class="span12">
              <%= render 'layouts/messages' %>
              <%= yield %>
            </div>
          </div>
          <footer>
          </footer>
      </div> <!--! end of .container -->
    </div> <!--! end of #main -->
  </body>
</html>